<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:layout_margin="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_service_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_service_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_service_thumb"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:layout_marginStart ="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/txt_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_service_thumb"
            app:layout_constraintTop_toBottomOf="@id/txt_service_name"
            android:textStyle="bold"
            android:layout_marginStart ="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="@drawable/background_blue_rectangle_round_corner"/>

        <TextView
            android:id="@+id/txt_view_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_service_thumb"
            app:layout_constraintBottom_toBottomOf="@id/img_service_thumb"
            app:layout_constraintStart_toStartOf="@id/img_service_thumb"
            app:layout_constraintEnd_toEndOf="@id/img_service_thumb"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:background="@drawable/background_gray_rectangle_round_corner"
            android:text="Chi tiáº¿t"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>