<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbarSize="15dp"
    >
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DrugDetail"
        android:layout_margin="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_drug_image"
                android:src="@drawable/ic_pills"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_drug_image"
                android:text="Panadol"
                android:id="@+id/txt_drug_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_top_border"
                app:layout_constraintTop_toBottomOf="@id/txt_drug_name"
                android:id="@+id/txt_drug_price_label"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Giá niêm yết:"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_drug_price_label"
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_drug_price"
                android:text="12 000 đồng/vỉ"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_top_border"
                app:layout_constraintTop_toBottomOf="@id/txt_drug_price"
                android:id="@+id/txt_drug_component_label"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Thành phần:"

                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_drug_component_label"
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_drug_component"
                android:text="500 mg Paracetamol\n65 mg Caffeine"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_drug_component"
                android:background="@drawable/textview_top_border"
                android:id="@+id/txt_drug_usecase_label"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Công dụng:"
                android:paddingLeft="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/txt_drug_usecase_label"
                android:id="@+id/txt_drug_usecase"
                android:text="Panadol Extra chứa paracetamol là một chất hạ sốt, giảm đau và caffeine là một chất tăng cường tác dụng giảm đau của paracetamol. Panadol Extra có hiệu quả trong điều trị đau nhẹ đến vừa và hạ sốt bao gồm:
                                \nĐau đầu
                                \nĐau nửa đầu
                                \nĐau cơ
                                \nĐau bụng kinh
                                \nĐau họng
                                \nĐau cơ xương
                                \nSốt và đau sau khi tiêm vắc xin
                                \nĐau sau khi nhổ răng hoặc sau các thủ thuật nha khoa
                                \nĐau răng
                                \nĐau do viêm xương khớp."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_drug_usecase"
                android:id="@+id/txt_drug_store"
                android:textSize="16dp"
                android:text="Danh sách cửa hàng gần bạn:"
                android:textStyle="bold"
                android:background="@drawable/textview_top_border"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/txt_drug_store"
                android:id="@+id/rcv_drug_store"
                android:layout_marginTop="10dp">
            </android.support.v7.widget.RecyclerView>




    </android.support.constraint.ConstraintLayout>
</ScrollView>